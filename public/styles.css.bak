/* Landscape mode on mobile */
@media screen and (max-width: 896px) and (orientation: landscape) {
    .sidebar {
        width: 50%;
        max-width: 50%;
        height: 100%;
        max-height: 100%;
        top: 0;
        bottom: 0;
        left: auto;
        right: 0;
        border-top: none;
        border-left: 1px solid rgba(148, 163, 184, 0.15);
        border-radius: 0;
        transform: translateX(0);
    }

    body.sidebar-right .sidebar {
        left: auto;
        right: 0;
    }

    body.sidebar-hidden .sidebar {
        transform: translateX(100%);
    }

    body.sidebar-right.sidebar-hidden .sidebar {
        transform: translateX(100%);
    }

    .sidebar-section:nth-child(3) {
        max-height: none;
        flex: 1;
    }

    .sidebar-hide-toggle {
        top: 50%;
        bottom: auto;
        left: auto;
        right: 50%;
        transform: translateY(-50%);
        border-radius: 12px 0 0 12px;
        border: 1px solid rgba(148, 163, 184, 0.15);
        border-right: none;
        padding: 20px 6px;
        box-shadow: -4px 0 16px rgba(0, 0, 0, 0.3);
    }

    body.sidebar-right .sidebar-hide-toggle {
        right: 50%;
        left: auto;
    }

    body.sidebar-hidden .sidebar-hide-toggle {
        right: 0;
    }

    body.sidebar-right.sidebar-hidden .sidebar-hide-toggle {
        right: 0;
    }

    .sidebar-hide-toggle button {
        transform: rotate(0deg);
        width: 14px;
        height: 40px;
    }

    body.sidebar-hidden .sidebar-hide-toggle button {
        transform: rotate(180deg);
    }

    .dns-legend {
        bottom: 16px;
        left: 25%;
        transform: translateX(-50%);
    }

    body.sidebar-hidden .dns-legend {
        left: 50%;
    }

    .theme-toggle,
    .sidebar-toggle {
        right: auto;
        left: 12px;
    }

    body.sidebar-right .theme-toggle,
    body.sidebar-right .sidebar-toggle {
        left: 12px;
    }
}

/* ========================================
   FILTER CONTROLS
   ======================================== */
.filter-controls {
    margin: 12px 0 0 0;
    padding-top: 10px;
    border-top: 1px solid rgba(148, 163, 184, 0.08);
}

.filter-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 6px 4px;
}

.filter-item label:first-child {
    font-size: 11px;
    font-weight: 500;
    color: rgba(148, 163, 184, 0.9);
}

/* Toggle Switch Styling */
.switch {
    position: relative;
    display: inline-block;
    width: 34px;
    height: 18px;
}

.switch input {
    opacity: 0;
    width: 0;
    height: 0;
}

.slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(148, 163, 184, 0.2);
    transition: .4s;
    border: 1px solid rgba(148, 163, 184, 0.1);
}

.slider:before {
    position: absolute;
    content: "";
    height: 12px;
    width: 12px;
    left: 2px;
    bottom: 2px;
    background-color: white;
    transition: .4s;
}

input:checked+.slider {
    background-color: #f6ad55;
    box-shadow: 0 0 8px rgba(246, 173, 85, 0.4);
}

input:focus+.slider {
    box-shadow: 0 0 1px #f6ad55;
}

input:checked+.slider:before {
    transform: translateX(16px);
}

.slider.round {
    border-radius: 18px;
}

.slider.round:before {
    border-radius: 50%;
}

/* ========================================
   UTILITIES
   ======================================== */
.updated {
    animation: statHighlight 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes statHighlight {
    0% {
        transform: scale(1.1);
        color: #f6ad55;
        text-shadow: 0 0 8px rgba(246, 173, 85, 0.4);
    }

    100% {
        transform: scale(1);
    }
}