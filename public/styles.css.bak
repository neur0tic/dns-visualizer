}

body.light-mode .footer-link:hover {
    color: #334155;
}

body.light-mode .footer-text {
    color: #64748b;
}

body.light-mode .footer-email {
    color: #94a3b8;
}

body.light-mode .loading {
    background: rgba(255, 255, 255, 0.95);
    border-color: rgba(148, 163, 184, 0.2);
    color: #334155;
    box-shadow:
        0 16px 64px rgba(100, 116, 139, 0.2),
        inset 0 1px 0 rgba(255, 255, 255, 0.8);
}

body.light-mode .loading-spinner {
    border-color: rgba(148, 163, 184, 0.2);
    border-top-color: #6366f1;
}

body.light-mode .status-indicator {
    background: #10b981;
    box-shadow: 0 0 12px rgba(16, 185, 129, 0.4);
}

body.light-mode .status-indicator.disconnected {
    background: #ef4444;
    box-shadow: 0 0 12px rgba(239, 68, 68, 0.4);
}

.loading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: rgba(226, 232, 240, 0.9);
    z-index: 1000;
    background: rgba(15, 23, 42, 0.9);
    backdrop-filter: blur(40px);
    -webkit-backdrop-filter: blur(40px);
    padding: 48px 64px;
    border-radius: 24px;
    border: 1px solid rgba(148, 163, 184, 0.15);
    box-shadow:
        0 16px 64px rgba(0, 0, 0, 0.5),
        inset 0 1px 0 rgba(148, 163, 184, 0.05);
}

.loading-spinner {
    width: 48px;
    height: 48px;
    border: 3px solid rgba(148, 163, 184, 0.2);
    border-top-color: #818cf8;
    border-radius: 50%;
    animation: spin 0.8s cubic-bezier(0.4, 0, 0.2, 1) infinite;
    margin: 0 auto 20px;
}

.loading div:last-child {
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.5px;
    margin-top: 8px;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

